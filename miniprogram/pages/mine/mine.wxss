.main{
  width: 100%;
  height: 100%;
  position: relative
} 
.userinfo{
  border: none;
  margin: 0;
  height: 350rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  
}
.userinfo1{
  border: none;
  margin: 0;
  height: 350rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.userinfo-avatar{
  display: block;
  width: 250rpx;
  height: 250rpx;
  left: 0;
  right: 0;
  top:0;
  bottom:0;
  overflow: hidden;
  border-radius: 50%;
  margin: auto;
}
.userinfo-avatar1{
  display: inline-flex;
  width: 250rpx;
  height: 250rpx;
  overflow: hidden;
  border-radius: 50%;
  justify-content: flex-start;
  align-content: center;
}
.user-name{
  font-size: 50rpx;
  font-weight: blod;
  display: flex;
  justify-content: center;

}
.user-name1{
  display: inline-flex;
  font-size: 50rpx;
  font-weight: blod;
  margin-left: 25rpx;
  align-content: center;
}
.login{
  position: absolute;
  background-color: white;
  border: 1px solid orange;
  color: black;
  width: 100%;
  left: 0;
}
